generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER 
  ADMIN 
}


model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String
  password    String
  isVerified  Boolean   @default(false)
  role        Role      @default(USER)
  otp         String
  otpExpiry   DateTime  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}

